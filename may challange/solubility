import java.util.*;
import java.lang.*;
import java.io.*;

/* Name of the class has to be "Main" only if the class is public. */
class Codechef
{
    public static void main (String[] args) throws java.lang.Exception
    {
        // your code goes here
        Scanner sc=new Scanner(System.in);
        int x,a,b,t;
        t=sc.nextInt();
        while(t-->0)
        {
            int ans=0;
            x=sc.nextInt();
            a=sc.nextInt();
            b=sc.nextInt();
            ans=a+((100-x)*b);
            System.out.println(ans*10);
        }
    }
}
